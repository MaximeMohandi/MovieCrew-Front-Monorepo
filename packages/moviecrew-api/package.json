{
  "name": "moviecrew-api",
  "version": "1.0.0",
  "description": "contain all movie related data features",
  "private": true,
  "main": "index.ts",
  "type": "module",
  "scripts": {
    "test": "jest --coverage --verbose --colors",
    "test-watch": "jest --watch",
    "lint": "eslint . --ext .ts",
    "build": "tsc"
  },
  "devDependencies": {
    "@types/jest": "^29.5.3",
    "@types/node": "^20.5.0",
    "eslint-config-custom": "*",
    "jest": "^29.6.2",
    "msw": "^1.2.3",
    "tsconfig": "*"
  },
  "dependencies": {
    "axios": "^1.4.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.1.6"
  },
  "jest": {
    "verbose": true,
    "collectCoverage": true,
    "testEnvironment": "node",
    "transform": {
      "^.+\\.ts?$": "ts-jest"
    },
    "moduleNameMapper": {
      "@movies/(.*)$": "<rootDir>/src/movies/$1",
      "@ratings/(.*)$": "<rootDir>/src/ratings/$1",
      "@users/(.*)$": "<rootDir>/src/users/$1",
      "@spectators/(.*)$": "<rootDir>/src/spectators/$1",
      "@auth/(.*)$": "<rootDir>/src/auth/$1"
    }
  }
}
